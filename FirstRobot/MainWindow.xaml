<Window x:Class="FirstRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstRobot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ConnectBnt" Content="Connect" HorizontalAlignment="Left" Margin="6,10,0,0" VerticalAlignment="Top" Width="884" Click="connectToQuik_Click" Height="27" RenderTransformOrigin="-0.335,0.582" Grid.ColumnSpan="3"/>

        <CheckBox x:Name="remoteConnection" Content="remote" HorizontalAlignment="Left" Margin="777,42,0,0" VerticalAlignment="Top" Checked="remoteConnection_Checked" Height="15" Width="58"/>
        <TextBox  x:Name="textBoxLogsWindow" HorizontalAlignment="Left" Margin="10,79.8,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="155" Width="874" Grid.Row="2" Grid.ColumnSpan="3"/>
        <Button x:Name="RunBtn" IsEnabled="False" Content="Run" HorizontalAlignment="Left" Margin="10,62,-0.4,0" VerticalAlignment="Top" Width="884" Click="RunBtn_Click" Height="27" RenderTransformOrigin="-0.335,0.582" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
